<div class="contents row">
  <div class="container">
    <%= form_for @tweet do |f| %>
      <h3>
        投稿内容の編集
      </h3>
      <%= f.text_area :text, :placeholder => @tweet.text , :rows => 5, :class => "post_textarea"%>
      <div class="file_input">
        <span>画像</span>
        <label for="image">
          <%= image_tag("image.png", :class => "file_image")%>
          <%= f.file_field :image, placeholder: "画像アップロード", style: "display:none;", id: "image"%>
        </label>

        <span>動画</span>
        <label for="movie">
          <%= image_tag("movie.png", :class => "file_image")%>
          <%= f.file_field :movie, placeholder: "画像アップロード", style: "display:none;", id: "movie"%>
        </label>
        <input type="submit" value="編集する" class="post_input">
      </div>
    <% end %>
  </div>
</div>